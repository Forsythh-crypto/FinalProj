{
  "build": {
    "builder": "nixpacks",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["php82", "composer", "nodejs", "npm"]
        },
        "install": {
          "cmds": [
            "composer install --no-dev --optimize-autoloader",
            "npm install",
            "npm run build"
          ]
        },
        "start": {
          "cmd": "php artisan serve --host=0.0.0.0 --port=$PORT"
        }
      }
    }
  }
}
